#include<stdio.h>
int main(){
	int n,j,i;
	scanf("%d",&n);
	for(i=1;i<=n;i++){
		if(i<=n/2+1){
		
		for(j=n/2+1-i;j>0;j--){
			printf("  ");
		}for(j=1;j<=2*i-1;j++){
		printf("* "); 
	}printf("\n");
}
if(i>n/2+1){
	for(j=2*(i-n/2-1);j>0;j--){
		printf(" ");
	}for(j=1;j<=2*(n-i)+1;j++){
		printf("* ");
	}printf("\n");
}
}
return 0;}

